<Controls:MetroWindow  xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="EyeGuard.UI.SetUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EyeGuard.UI"
        mc:Ignorable="d"
        Title="SetUp" Height="308.429" Width="245"  ResizeMode ="NoResize" WindowStartupLocation="CenterScreen" Loaded="MetroWindow_Loaded" ShowInTaskbar = "False">
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="Github" Name="OpenUrl" Click="OpenUrl_Click" />
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Button Content="定时关机" Name="SwitchBoard" Click="Switch_Click" />
                </StackPanel>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid>

        <Grid Name="RestPanel" >
            <Label Content="工作时间:" HorizontalAlignment="Left" Margin="7,37,0,0" VerticalAlignment="Top"/>
            <Label Content="休息时间:" HorizontalAlignment="Left" Margin="7,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.586,2.96"/>
            <Label Content="计时模式:" HorizontalAlignment="Left" Margin="7,116,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.586,2.96"/>
            <Label Content="锁屏风格:" HorizontalAlignment="Left" Margin="7,160,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.586,2.96"/>

            <!--工作时间-->
            <Slider Name="work" LostFocus="TimerMode_LostFocus" ValueChanged="TimerMode_ValueChanged" IsSnapToTickEnabled="True" Minimum="1"  Maximum="60"  HorizontalAlignment="Left" Margin="76,32,0,0" VerticalAlignment="Top" Width="143" Height="36"/>
            <!--休息时间-->
            <Slider  Name="rest" LostFocus="TimerMode_LostFocus" ValueChanged="LockMode_ValueChanged" IsSnapToTickEnabled="True" Minimum="1"  Maximum="15"  HorizontalAlignment="Left" Margin="76,69,0,0" VerticalAlignment="Top" Width="143" Height="36"/>

            <ComboBox  IsEditable="True"  IsReadOnly="True" Name="Time" HorizontalAlignment="Left" Margin="76,116,0,0" VerticalAlignment="Top" Width="143"  />
            <ComboBox Name="Lock" HorizontalAlignment="Left" Margin="76,158,0,0" VerticalAlignment="Top" Width="143"/>
            <Button Name="Preservation" Click="Preservation_Click" Content="保存" HorizontalAlignment="Left" Margin="159,203,0,0" VerticalAlignment="Top" Width="60" Height="66"/>
            <Label Name="DisplayTime" Content="您已经工作0分" FontSize="15" HorizontalAlignment="Left" Margin="67,5,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.586,2.96"/>
            <Controls:ToggleSwitch OnContent="允许解锁" Name="Unlock" OffContent="禁止解锁" Margin="10,199,95.429,49" />
            <Controls:ToggleSwitch OnContent="智能计时" x:Name="IsIntelligent" OffContent="普通计时" Margin="10,237,95.429,11" />
        </Grid>

        <Grid Name="ShutdownPanel" Visibility="Collapsed">
            <Label Content="小时:" HorizontalAlignment="Left" Margin="6,39,0,0" VerticalAlignment="Top"/>
            <Label Content="分钟:" HorizontalAlignment="Left" Margin="6,73,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.586,2.96"/>

            <ComboBox  IsEditable="True"  IsReadOnly="True" Name="ShutdownTime" HorizontalAlignment="Left" Margin="55,38,0,0" VerticalAlignment="Top" Width="174" RenderTransformOrigin="0.497,-0.769"  />
            <ComboBox Name="ShutdownPoints" HorizontalAlignment="Left" Margin="55,73,0,0" VerticalAlignment="Top" Width="174"/>
            <Button  Click="Preservation_Click"  FontSize="50" Content="保存" HorizontalAlignment="Left" Margin="11,151,0,0" VerticalAlignment="Top" Width="218" Height="110"/>
            <Label Content="提示：-1代表不启用自动关机" FontSize="15" HorizontalAlignment="Left" Margin="17,5,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.586,2.96" Foreground = "Red" />
            <Label Content="模式:" HorizontalAlignment="Left" Margin="7,109,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.586,2.96"/>
            <ComboBox  IsEditable="True"  IsReadOnly="True" x:Name="ShutdownMode" HorizontalAlignment="Left" Margin="55,108,0,0" VerticalAlignment="Top" Width="174"  />
        </Grid>
    </Grid>
</Controls:MetroWindow>
